/* CUSTOM STORY STYLE */
body
	background-color blue

main
	background-color $hb-paper
	width 1920px
	height 1080px
	padding 50px

	.text
		position absolute
		width 980px
		bottom 10%
		left 50%
		transform translate(-50%, 0%)
		z-index set-index('overlay')

		p
			font-family $cooper
			set-type-size('xxx-large', true)
			margin 0
			color $off-black

			span
				opacity 0

	.texture
		position absolute
		top 0
		left 0
		width 1920px
		height 1080px
		z-index 0
		background-color $hb-paper
		// opacity 0

		img
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			opacity 0
			mix-blend-mode multiply
			// mix-blend-mode soft-light
